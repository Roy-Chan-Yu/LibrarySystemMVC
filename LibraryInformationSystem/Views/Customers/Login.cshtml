@model LibraryInformationSystem.Models.Customer

@{
    ViewBag.Title = "Login Page";
}

@using (Html.BeginForm("Login", "Customers", FormMethod.Post))
{
    <fieldset>
        <h2>Mvc Customer Login</h2>

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <table class="table">
            <tr>
                <td>
                    @Html.LabelFor(model => model.Account)
                </td>
                <td>
                    @Html.TextBoxFor(model => model.Account)
                </td>
                <td>
                    @Html.LabelFor(model => model.Password_MD5)
                </td>
                <td>
                    @Html.PasswordFor(model => model.Password_MD5)
                </td>
                <td>
                    @Html.ValidationMessageFor(model => model.Password_MD5)
                </td>
                <td>
                    @Html.ValidationMessageFor(model => model.Name)
                </td>
                <td>
                    <input type="submit" value="Login" />
                </td>
            </tr>



        </table>
    </fieldset>
}