@model IEnumerable<LibraryInformationSystem.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    @if (Session["Account"] != null)
    {
        <h2>Welcome @Session["Account"].ToString()</h2>
    }

    <div id="countDown"></div>

    <script>
        let count = 3;

        function countDown() {

            document.getElementById("countDown").innerHTML = count + "秒後跳轉頁面";

            if (count == 0) {
                location.href = "http://localhost:52214/Books";
            }

            count--;

            setTimeout("countDown()", 1000);

        };

        countDown();

    </script>

</body>
</html>
