@model LibraryInformationSystem.Models.Admin


@{
    ViewBag.Title = "Admin Page";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Login", "Admins", FormMethod.Post))
{
    <fieldset>

        <h2>MVC Admin login in</h2>

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <table class="table">
            <tr>
                <td>
                    @Html.LabelFor(model => model.AdminName)
                </td>
                <td>
                    @Html.TextBoxFor(model => model.AdminName)
                </td>
                <td>
                    @Html.LabelFor(model => model.Password_MD5)
                </td>
                <td>
                    @Html.PasswordFor(model => model.Password_MD5)
                </td>
                <td>
                    @Html.ValidationMessageFor(model => model.Password_MD5)
                </td>
                <td>
                    @Html.ValidationMessageFor(model => model.AdminName)
                </td>
                <td>
                    <input type="submit" value="Login" />
                </td>
            </tr>



        </table>

    </fieldset>
}


